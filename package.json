{
  "name": "animatour",
  "version": "0.0.2",
  "private": false,
  "module": "src/main.js",
  "main": "index.js",
  "dependencies": {
    "@babel/cli": "^7.14.8",
    "core-js": "3"
  },
  "scripts": {
    "build": "webpack",
    "babel": "clear && NODE_ENV=production babel ./src --ignore index.js --out-dir ./dist",
    "serve": "webpack serve ",
    "dev": "webpack --watch ",
    "packit":"npm run p0 && npm run p1 && npm run p2 && npm run p3 && npm run p4",

      "0______ remove the old dist directory ____________________________________________":"",
      "p0": "clear && rm -rf ./dist",

      "1______ transpile ./src directory and create ./dist directory ____________________":"",
      "p1": "NODE_ENV=production babel ./src --out-dir ./dist",

      "2______ upgrade the version before copy __________________________________________":"",
      "p2":"cd ./temp && npm --no-git-tag-version version patch && cd ..",

      "3______ copy the temp package to the new dist directory __________________________":"",
      "p3":"cp ./temp/package.json ./dist/package.json",

      "4______ run the local scripts ____________________________________________________":"",
      "p4":"cd ./dist && npm run packme"

  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@babel/preset-env": "^7.15.0",
    "@babel/preset-react": "^7.14.5",
    "babel-loader": "^8.2.2",
    "css-loader": "^6.2.0",
    "file-loader": "^6.2.0",
    "sass": "^1.38.1",
    "sass-loader": "^12.1.0",
    "style-loader": "^3.2.1",
    "webpack": "^5.51.1",
    "webpack-cli": "^4.8.0",
    "webpack-dev-server": "^4.0.0"
  },
  "peerDependencies": {
    "react": ">=16.8",
    "react-dom": ">=16.8",
    "react-scripts": "4.0.3"
  }
}
